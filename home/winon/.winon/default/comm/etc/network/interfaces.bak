# interfaces(5) file used by ifup(8) and ifdown(8)
auto lo
iface lo inet loopback

auto eth0
iface eth0 inet static
  address 5.0.0.2
  network 5.0.0.0
  netmask 255.255.255.0
  broadcast 5.0.0.255
  gateway 5.0.0.1

auto eth1
iface eth1 inet static
  address 5.1.0.1
  network 5.1.0.0
  netmask 255.255.255.0
  broadcast 5.1.0.255
